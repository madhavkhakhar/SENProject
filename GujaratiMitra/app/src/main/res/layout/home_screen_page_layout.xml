<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg_s1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight=".5"
        android:weightSum="1">
        <ImageView
            android:id="@+id/level1"
            android:layout_weight=".25"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/home_s1_l1"/>
        <ImageView
            android:id="@+id/level2"
            android:layout_weight=".25"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/home_s1_l2"/>
        <ImageView
            android:id="@+id/level3"
            android:layout_weight=".25"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/home_s1_l3"/>
        <ImageView
            android:id="@+id/level4"
            android:layout_weight=".25"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/home_s1_l4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight=".5"
        android:weightSum="1">
        <ImageView
            android:id="@+id/level7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/home_s1_l7"
            android:layout_weight=".33"/>
        <ImageView
            android:id="@+id/level6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/home_s1_l6"
            android:layout_weight=".33"/>
        <ImageView
            android:id="@+id/level5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/home_s1_l5"
            android:layout_weight=".34"/>

    </LinearLayout>
</LinearLayout>