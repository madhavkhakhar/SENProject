<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codebenders.gujaratimitra.Level3_1"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:weightSum="1.0"
        android:layout_weight="0.41"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCORE 0/10"
            android:id="@+id/score"
            android:textSize="20dp"
            android:textColor="#FF9933CC"
            android:layout_gravity="center|center_horizontal"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal"
            android:padding="15dp"
            android:id="@+id/que_statement"
            android:layout_weight="0.2"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/imageView6"
            android:src="@drawable/loudspeaker"
            android:layout_weight="0.8"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:weightSum="1.0"
        android:layout_weight="0.3"
        android:orientation="horizontal">

    <ImageView
        android:padding="50dp"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:layout_gravity="center_vertical"
        android:id="@+id/imgViewq1"
        android:src="@drawable/level16_1_img_e1_1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight="0.4"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_gravity="center"
            android:id="@+id/imgViewa1"
            android:src="@drawable/level16_1_img_e1_1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.2"
            android:id="@+id/imgViewa2"
            android:src="@drawable/level16_1_img_e1_2" />

        <ImageView
            android:src="@drawable/level16_1_img_e1_3"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/imgViewa3"
            android:layout_weight="0.2"

            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:id="@+id/imgViewa4"
            android:src="@drawable/level16_1_img_e1_4" />
    </LinearLayout>
</LinearLayout>